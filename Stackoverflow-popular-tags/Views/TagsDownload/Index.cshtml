@model List<Stackoverflow_popular_tags.Models.Item>
@{
    ViewBag.Title = "StackTag - App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Tag</th>
                <th scope="col">Tag Count</th>
                <th scope="col">Percent</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Count</td>
                    <td>@item.Percent%</td>
                </tr>
            }
        </tbody>
    </table>
</div>